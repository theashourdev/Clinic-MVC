@model Cilinc_System.Models.Specialties

<div class="modal-body">
    <div class="card border-0 shadow-sm rounded-3">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                <img src="@(string.IsNullOrEmpty(Model.ImagePath)
                    ? Url.Content("~/images/specialty-form.png")
                    : Url.Content(Model.ImagePath))"
                     alt="@Model.Name"
                     class="img-fluid rounded-circle shadow-sm"
                     style="width: 120px; height: 120px; object-fit: cover;" />
            </div>

            <div class="col-md-8 p-3">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="bi bi-bookmark-heart"></i> Specialty Information
                </h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-bold">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-bold">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
