@using Cilinc_System.Models.ViewModels
@model EditDoctorViewModel

@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
        <div class="row g-0">
            <!-- Doctor Image Preview -->
            <div class="col-md-3 bg-light d-flex align-items-center justify-content-center p-3">
                <img id="doctorImagePreview"
                     src="@(string.IsNullOrEmpty(Model.ImagePath) ? Url.Content("~/images/doctor-form.png") : Url.Content(Model.ImagePath))"
                     class="img-fluid rounded-3 shadow-sm"
                     alt="Doctor Image"
                     style="max-height: 140px;">
            </div>

            <div class="col-md-9 p-4">
                <h4 class="mb-3 text-gradient fw-bold">
                    <i class="bi bi-pencil-square"></i> Edit Doctor
                </h4>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="DoctorID" />
                    <input type="hidden" asp-for="ImagePath" /> <!-- To preserve image if no new one uploaded -->

                    <div class="row">
                        <!-- Doctor Info -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-bold small"></label>
                                <input asp-for="Name" class="form-control form-control-sm" placeholder="Full name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SpecialtyID" class="form-label fw-bold small">Specialty</label>
                                <select asp-for="SpecialtyID" class="form-select form-select-sm" asp-items="ViewBag.Specialties">
                                    <option value="">-- Select Specialty --</option>
                                </select>
                                <span asp-validation-for="SpecialtyID" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label fw-bold small"></label>
                                <input asp-for="Phone" class="form-control form-control-sm" placeholder="Phone number" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label fw-bold small">Change Doctor Image</label>
                                <input asp-for="ImageFile"
                                       type="file"
                                       class="form-control form-control-sm"
                                       accept="image/*"
                                       onchange="previewDoctorImage(event)" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Doctor Schedule -->
                        <div class="col-md-6">
                            <h6 class="fw-bold mb-2">
                                <i class="bi bi-calendar-week"></i> Doctor Schedule
                            </h6>
                            <table class="table table-sm table-bordered align-middle shadow-sm w-100">
                                <thead class="table-primary text-center small">
                                    <tr>
                                        <th>Day</th>
                                        <th>Work?</th>
                                        <th>Start</th>
                                        <th>End</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Schedules.Count; i++)
                                    {
                                        <tr>
                                            <td class="fw-bold text-center small">
                                                @Model.Schedules[i].DayOfWeek
                                                <input type="hidden" asp-for="Schedules[@i].DayOfWeek" />
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" asp-for="Schedules[@i].IsWorking" class="form-check-input" />
                                            </td>
                                            <td>
                                                <input type="time" asp-for="Schedules[@i].StartTime" class="form-control form-control-sm" />
                                            </td>
                                            <td>
                                                <input type="time" asp-for="Schedules[@i].EndTime" class="form-control form-control-sm" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <span asp-validation-for="Schedules" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-primary btn-sm shadow">
                            <i class="bi bi-save"></i> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .text-gradient {
            background: linear-gradient(90deg, #0d6efd, #198754);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>

    <script>
        function previewDoctorImage(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var img = document.getElementById('doctorImagePreview');
                img.src = reader.result;
            };

            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
