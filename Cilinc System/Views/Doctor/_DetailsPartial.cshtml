@model Cilinc_System.Models.Doctor

<div class="modal-body">
    <div class="card border-0 shadow-sm rounded-3">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                <img src="@(string.IsNullOrEmpty(Model.ImagePath)
                                                      ? Url.Content("~/images/doctor-form.png")
                                                      : Url.Content(Model.ImagePath))"
                     alt="@Model.Name"
                     class="img-fluid rounded-circle shadow-sm"
                     style="width: 120px; height: 120px; object-fit: cover;" />
            </div>

            <div class="col-md-8 p-3">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="bi bi-person-badge"></i> Doctor Information
                </h5>
                <dl class="row mb-3">
                    <dt class="col-sm-4 fw-bold">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-bold">Specialty</dt>
                    <dd class="col-sm-8">@Model.Specialty?.Name</dd>

                    <dt class="col-sm-4 fw-bold">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                </dl>

                @if (Model.Schedules != null && Model.Schedules.Any(s => s.IsWorking))
                {
                    <h6 class="fw-bold text-secondary mb-2">
                        <i class="bi bi-clock-history"></i> Weekly Schedule
                    </h6>
                    <table class="table table-sm table-bordered">
                        <thead class="table-light text-center small">
                            <tr>
                                <th>Day</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                            </tr>
                        </thead>
                        <tbody class="text-center small">
                            @foreach (var schedule in Model.Schedules.Where(s => s.IsWorking))
                            {
                                <tr>
                                    <td class="fw-bold">@schedule.DayOfWeek</td>
                                    <td>@schedule.StartTime.ToString("hh\\:mm")</td>
                                    <td>@schedule.EndTime.ToString("hh\\:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted small"><i class="bi bi-info-circle"></i> No working schedule available.</p>
                }
            </div>
        </div>
    </div>
</div>
